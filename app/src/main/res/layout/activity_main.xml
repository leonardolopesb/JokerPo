<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_gravity="center"
    android:padding="32dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Vamos jogar?"
        android:textColor="@color/white"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Escolha uma opção:"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <LinearLayout
        android:id="@+id/jokenpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/imgPedra"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:contentDescription="Imagem de pedra"
            android:src="@drawable/pedra" />

        <ImageView
            android:id="@+id/imgPapel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:contentDescription="Imagem de papel"
            android:src="@drawable/papel" />

        <ImageView
            android:id="@+id/imgTesoura"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:contentDescription="Imagem de tesoura"
            android:src="@drawable/tesoura" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opçoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnPedra"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Pedra"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnPapel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Papel"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnTesoura"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Tesoura"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:backgroundTint="@android:color/darker_gray" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Minha escolha é:"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/imgComputador"
        android:layout_gravity="center"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Imagem do computador"
        android:src="@drawable/interrogracao" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Resultado"
        android:textColor="@color/white"
        android:textSize="24sp"/>

</LinearLayout>